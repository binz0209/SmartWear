@model IEnumerable<Business.Models.Order>
@{
    ViewData["Title"] = "Order Management";
}
<h2 class="mb-3 text-center">Order List</h2>
<p class="text-center">
    <a asp-action="Trash" class="btn btn-primary me-2">
        <i class="fa fa-trash"></i> Trash
    </a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr class="text-center align-middle">
                <td>@order.Id</td>
                <td>@order.User.Username</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="EditStatus" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edit Status</a>
                    <form asp-action="Delete" method="post" asp-route-id="@order.Id" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
